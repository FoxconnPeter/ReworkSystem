<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/bigsearch_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/one"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/two"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/three"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/four"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/five"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <com.app.gaolonglong.fragmenttabhost.View.ClearEditText
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:id="@+id/search"
        android:hint="请输入要查询的   SN   "
        android:drawableLeft="@drawable/search"
        android:background="@drawable/search_bg"
        android:layout_below="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/erweima"
        android:id="@+id/erweima"
        android:layout_margin="10dp"
        />



</LinearLayout>

    <Button
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:id="@+id/bigsearch_button"
        android:text="搜索"
        android:background="@drawable/search_selector"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="click5"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />


    <ListView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listView"
        android:layout_weight="0.26"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true"
        android:divider="@color/colorBlack"
        android:background="@drawable/border" />

</LinearLayout>