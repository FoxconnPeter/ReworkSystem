<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/radius_drawable_bg"
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_gravity="center"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="41dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/paw_code" />

            <com.app.gaolonglong.fragmenttabhost.View.ClearEditText
                android:layout_width="309dp"
                android:layout_height="58dp"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:id="@+id/username"
                android:hint="账号"
                android:padding="5dip"
                android:textSize="@dimen/dip_size_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_layout_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="41dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/paw_left" />

            <com.app.gaolonglong.fragmenttabhost.View.ClearEditText
                android:layout_width="312dp"
                android:layout_height="66dp"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="5dip"
                android:id="@+id/password"

                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/dip_size_20" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#eeeeee" />

    </LinearLayout>
</LinearLayout>
