<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/listview_header_border">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Data Time"
        android:gravity="center"
        android:textSize="@dimen/font_size_15"
        android:id="@+id/report_header_time"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Model"
        android:textSize="@dimen/font_size_15"
        android:gravity="center"

        android:id="@+id/report_header_model"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="S/N"
        android:textSize="@dimen/font_size_15"
        android:gravity="center"

        android:id="@+id/report_header_SN"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Station"
        android:textSize="@dimen/font_size_15"
        android:gravity="center"

        android:id="@+id/report_header_station"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"

        android:layout_weight="1"
        android:textSize="@dimen/font_size_15"
        android:layout_height="wrap_content"
        android:text="Location"
        android:gravity="center"
        android:id="@+id/report_header_location"
        />





    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="零件料号"
        android:gravity="center"
        android:id="@+id/report_header_liaohao"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Description"
        android:gravity="center"
        android:id="@+id/report_header_des"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Engneer"
        android:gravity="center"
        android:id="@+id/report_header_engneer"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="维修类型"
        android:gravity="center"
        android:id="@+id/report_header_leixing"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="不良现象"
        android:gravity="center"
        android:id="@+id/report_header_xianxiang"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="L/C"
        android:gravity="center"
        android:id="@+id/report_header_lc"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="D/C:"
        android:gravity="center"
        android:id="@+id/report_header_dc"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>
    <TextView
        android:layout_width="0dp"
        android:textSize="@dimen/font_size_15"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="厂商"
        android:gravity="center"
        android:id="@+id/report_header_changshang"
        />








</LinearLayout>
