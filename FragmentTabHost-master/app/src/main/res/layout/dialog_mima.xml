<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvoldmima"
            android:text="旧的密码:"
            />
        <com.app.gaolonglong.fragmenttabhost.View.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/oldmima"
            android:text="OldPaaword"
            android:layout_marginLeft="10dp"

            android:layout_weight="5.10" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvnewmima"
            android:text="新的密码:"
            />
        <com.app.gaolonglong.fragmenttabhost.View.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/newmima"
            android:text="Password"
            android:layout_marginLeft="10dp"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvsuremima"
            android:text="确认密码:"
            />
        <com.app.gaolonglong.fragmenttabhost.View.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/surenewmima"
            android:text="Password"

            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/dialog_exit"
             />
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_marginLeft="30dp"
            android:id="@+id/sure"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tccc"
        android:textSize="0dp"
        />


    　

    　　




</LinearLayout>